<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/sidebar.ejs') %>
    <main>
      <h1><%= title %></h1>
      <form method="POST" action="">
        <div class="form-group">
          <label for="first_name">First Name: </label>
          <input class="form-control" id="first_name" type="text"
          placeholder="First name (Connor)" name="first_name" required: true
          value="<%=locals.author === undefined ? "" : locals.author.first_name
          %>" >

          <label for="family_name">Family Name: </label>
          <input class="form-control" id="family_name" type="text"
          placeholder="Family name (Leavitt)" name="family_name" required: true
          value="<%=locals.author === undefined ? "" : locals.author.family_name
          %>" >

          <label for="date_of_birth">Date of Birth: </label>
          <input class="form-control" id="date_of_birth" type="date"
          name="date_of_birth" placeholder='dd/mm/yyyy' value="<%=locals.author
          === undefined ? "" : locals.author.date_of_birth %>" >

          <label for="date_of_death">Date of Death: </label>
          <input class="form-control" id="date_of_death" type="date"
          name="date_of_death" placeholder='dd/mm/yyyy' value="<%=locals.author
          === undefined ? "" : locals.author.date_of_death %>" >

          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <% if(locals.errors !== undefined) { %>
      <ul>
        <% for (const error in locals.errors) {%>
        <li><%=locals.errors[error].msg%></li>
        <%}%>
      </ul>
      <%}%>
    </main>
  </body>
</html>
